---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Me";

const identity = {
      firstName: "Steve",
      lastName: "Giovannetti"
      };
const skills = ["Procrastination", "Being Bored"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "green";
const fontWeight = "bold";
---

<BaseLayout pageTitle={pageTitle}>
<p>My name is {identity.firstName}</p>
<p>My skills are:</p>
<ul>
   {skills.map((skill) => <li class="skill">{skill}</li>)}
</ul>
{happy && <p>I'm happy!</p>}
{finished && <p>I'm finished!</p>}
{goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not to finish in 3 days.</p>}
</BaseLayout>